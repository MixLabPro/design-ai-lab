  "code": "var canvas, img;\nfunction setup() {\n    canvas = createCanvas(windowWidth, windowHeight);\n    background(\"#eee\");\n    noStroke();\n    fill('yellow');\n    rect(0, 120, windowWidth, windowHeight);\n\n    textSize(14);\n    textAlign(LEFT, TOP);\n    fill('black');\n    text('图片', 20, 25);\n    input = createFileInput(handleFile);\n    input.position(60, 20);\n    function handleFile(file) {\n        if (file.type === 'image') {\n            img = createImg(file.data, '');\n            AI.getColor(img);\n            img.hide();\n        } else {\n            img = null;\n        }\n    }\n\n    text('字体', 20, 55);\n    input2 = createFileInput(handleFile2);\n    input2.position(60, 50);\n    function handleFile2(file) {\n        textFont(\n            loadFont(URL.createObjectURL(file.file))\n        );\n    }\n\n    button = createButton('下载');\n    button.position(20, 90);\n    button.mousePressed(downCanvas);\n    function downCanvas() {\n        saveCanvas(AI.cropCanvas(canvas, 0, 120, windowWidth, windowHeight - 120), '01', 'jpg');\n    }\n}\n\nfunction draw() {\n    if (img&&img.mainColor) background(img.mainColor.toString());\n    if (img) image(img, 0, 120, width, width * img.height / img.width);\n\n    textSize(24)\n    text(\"智能设计：标题\", 10, height * 0.85)\n    textSize(14)\n    text(\"副标题\", 12, height * 0.85 + 24)\n}"
